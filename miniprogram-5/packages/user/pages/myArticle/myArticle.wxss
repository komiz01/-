/* packages/user/pages/myArticle/myArticle.wxss */
.cards-container {
    padding: 20px;
  }
  
  .card-container {
    border-radius: 10px;
    background-color: #fff;
    margin-bottom: 20px;
    overflow: hidden;
  }
  
  .card-header {
    display: flex;
    align-items: center;
    padding: 15px;
    background-color: #f8f8f8;
  }
  
  .avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 10px;
  }
  
  .nickname {
    font-weight: bold;
  }
  
  .time {
    color: gray;
    font-size: 10px;
  }

  .card-content {
    padding: 15px;
  }
  
  .title {
    font-size: 1.1em;
    margin-bottom: 10px;
  }
  
  .content {
    margin-bottom: 10px;
  }
  
  .image-gallery {
    white-space: nowrap;
    overflow: hidden;
  }
  
  .gallery-image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
  }