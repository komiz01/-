/* packages/user/pages/myArticle/myDetail/editArcitle/editArticle.wxss */
.article-detail {
    padding: 20rpx;
  }
  
  .header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 10rpx;
  }
  
  .author-name {
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .publish-time {
    font-size: 24rpx;
    color: #888;
    margin-left: 10rpx;
  }
  
  .collect-button {
    background-color: snow;
    width: 20%;
    position: absolute;
    top: 20rpx;
    right: -10rpx;
    align-items: center;
  }
  
  .collect-icon {
    width: 60rpx;
    height: 60rpx;
  }
  
  .title {
    padding: 20rpx;
    font-size: 40rpx;
    font-weight: bold;
    margin-top: 20rpx;
    margin-bottom: 0rpx;
    height: 50rpx;
  }
  
  .content {
    font-size: 32rpx;
    line-height: 1.5;
    margin-bottom: 20rpx;
    padding: 20rpx;
    word-wrap: break-word; /* 强制长单词或URL地址换行到下一行 */
    white-space: normal; /* 默认值，允许内容换行 */
    overflow-wrap: break-word; /* 与word-wrap相同的作用，提供更好的浏览器兼容性 */
    max-width: 100%; /* 确保内容区不超过其父容器的宽度 */
  }
  


  .image-gallery {
    white-space: nowrap;
    overflow: hidden;
  }
  
  .gallery-image {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
  }

  .image-wrapper {
    position: relative;
    display: inline-block;
  }

  .image-gallery .image-wrapper icon{
    position: absolute;
    top: -5rpx;
    right: -5rpx;
    z-index: 10;
  }
  
  

  .btn{
    background-color: #469fff;
    color: white;
    padding: 14px 24px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1.3rem;
    width: 100%;
    text-align: center
  }