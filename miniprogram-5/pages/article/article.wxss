/* pages/article/article.wxss */

.form-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 30px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    font-family: 'Arial', sans-serif;
    box-sizing: content-box;
}


.form-group {
    margin-bottom: 20px;
}


.form-control {
    width: 100%;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1.2rem;
    box-sizing: border-box;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #007bff;
    outline: none;
}


.form-group .form-control-file {
    display: none;
}


.upload-label {
    display: inline-block;
    width: 89%;
    padding: 60px;
    border: 2px dashed #ccc;
    border-radius: 5px;
    text-align: center;
    background-color: #f9f9f9;
    color: #666;
    font-size: 1.2rem;
    cursor: pointer;
    transition: background-color 0.3s ease, border-color 0.3s ease;
}


.upload-label:hover {
    background-color: #f1f1f1;
    border-color: #007bff;
    color: #007bff;
}

.upload-label i {
    font-size: 3rem;
    color: #007bff;
    margin-right: 10px;
}


.btn-primary {
    background-color: #469fff;
    color: white;
    padding: 14px 24px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1.3rem;
    width: 100%;
    transition: background-color 0.3s ease;
    text-align: center;
}

.btn-primary:hover {
    background-color: #9dc2de;
}


.main h2.page-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 30px;
    font-weight: bold;
    margin-left: auto;
    margin-right: auto;
    width: fit-content;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .form-container {
        padding: 20px;
    }

    .upload-label {
        font-size: 1rem;
        padding: 18px;
    }

    .btn-primary {
        width: 100%;
        font-size: 1.1rem;
    }

    .form-control {
        font-size: 1rem;
    }

    .remove-image-btn {
        font-size: 0.9rem;
    }
}


 .imgList{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding: 6rpx;
  }
  .imgList .imgBox{
    position: relative;
    width: 220rpx;
    height: 220rpx;
    margin-bottom: 10rpx;
    margin-right: 10rpx;
  }
  .imgList .imgBox:nth-of-type(3n){
    margin-right: 0;
  }
  .imgList .imgBox image{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .imgList .imgBox icon{
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    z-index: 10;
  }
  